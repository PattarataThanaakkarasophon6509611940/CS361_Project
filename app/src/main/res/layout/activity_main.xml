<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/scene"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/scene_1_1"
            tools:ignore="ContentDescription" />

        <Button
            android:id="@+id/btnNewGame"
            android:layout_width="@dimen/btnAction0Width"
            android:layout_height="@dimen/btnAction0Height"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/btnAction0MarginTop"
            android:backgroundTint="@color/btn"
            android:text="@string/btnNewGame"
            android:textColor="@color/text" />

        <Button
            android:id="@+id/btnContinue"
            android:layout_width="@dimen/btnAction0Width"
            android:layout_height="@dimen/btnAction0Height"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/btnContinue"
            android:backgroundTint="@color/btn"
            android:text="@string/btnContinue"
            android:textColor="@color/text" />
    </FrameLayout>


</LinearLayout>